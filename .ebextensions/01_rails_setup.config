option_settings:
  aws:elasticbeanstalk:command:
    Timeout: 2000

packages:
  yum:
    amazon-linux-extras: []
    jq: []

commands:
  00_set_vars:
    command: /opt/elasticbeanstalk/bin/get-config environment | jq -r 'to_entries | .[] | "export \(.key)=\"\(.value)\""' > /etc/profile.d/sh.local
  01_postgres_activate:
    command: sudo amazon-linux-extras enable postgresql10
  02_postgres_install:
    command: sudo yum install -y postgresql-devel
  03_mkdir_webapp_dir:
    test: '[ ! -p /home/webapp ] && echo "webapp does not exist"'
    command: "sudo mkdir -p /home/webapp"
    ignoreErrors: true
  04_chown_webapp_dir:
    test: '[ ! -p /home/webapp ] && echo "webapp does not exist"'
    command: "sudo chown webapp:webapp /home/webapp"
    ignoreErrors: true
  05_chmod_webapp_dir:
    test: '[ ! -p /home/webapp ] && echo "webapp does not exist"'
    command: "sudo chmod 0744 /home/webapp"
    ignoreErrors: true
  06_mkdir_logs:
    command: "sudo mkdir -p /var/app/current/log/"
  07_chmod_logs:
    command: "sudo chown webapp:webapp -R /var/app/current/log/"
    ignoreErrors: true
  08_chmod_log_dir:
    command: "sudo chmod 0664 -R /var/app/current/log/"
    ignoreErrors: true
  09_chown_current:
    command: "sudo chown webapp:webapp -R /var/app/current/"
    ignoreErrors: true
  10_chmod_current:
    command: "sudo chmod 0755 -R /var/app/current/"
    ignoreErrors: true
  11_delayed_job_stop:
    command: "bin/delayed_job stop"
  12_delayed_job_start:
    command: "bin/delayed_job start"

container_commands:
  01_tenants_db_migrate:
    command: "bundle exec rails tenants:db:migrate"

