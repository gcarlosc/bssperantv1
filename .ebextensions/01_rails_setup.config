option_settings:
  aws:elasticbeanstalk:command:
    Timeout: 2000

packages:
  yum:
    amazon-linux-extras: []
    jq: []
    awslogs: []

files:
  "/etc/awslogs/awscli.conf" :
    mode: "000600"
    owner: root
    group: root
    content: |
      [plugins]
      cwlogs = cwlogs
      [default]
      region = `{"Ref":"AWS::Region"}`

  "/etc/awslogs/awslogs.conf" :
    mode: "000600"
    owner: root
    group: root
    content: |
      [general]
      state_file = /var/lib/awslogs/agent-state

  "/etc/awslogs/config/logs.conf" :
    mode: "000600"
    owner: root
    group: root
    content: |
      [/var/app/current/log/production]
      log_group_name = `{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/messages"]]}`
      log_stream_name = {instance_id}
      file = /var/app/current/log/production

commands:
  00_set_vars:
    command: /opt/elasticbeanstalk/bin/get-config environment | jq -r 'to_entries | .[] | "export \(.key)=\"\(.value)\""' > /etc/profile.d/sh.local
  01_postgres_activate:
    command: sudo amazon-linux-extras enable postgresql10
  02_postgres_install:
    command: sudo yum install -y postgresql-devel
  03_chmod_tmp_pids:
    command: "sudo chmod g+w /var/app/current/tmp/pids"
  04_awslogs_service:
    command: systemctl enable awslogsd.service
  05_awslogs_restart:
    command: systemctl restart awslogsd

container_commands:
  01_tenants_db_migrate:
    command: "bundle exec rails tenants:db:migrate"
  02_delayed_job_stop:
    command: "bin/delayed_job stop"
  03_delayed_job_start:
    command: "bin/delayed_job start"

